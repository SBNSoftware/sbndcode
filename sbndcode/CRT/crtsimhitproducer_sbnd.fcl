BEGIN_PROLOG

standard_crtsimhitproducer:
{
    module_type:          "sbndcode/CRT/CRTSimHitProducer"
    CrtModuleLabel:       "crt"
    Verbose:              false
    TimeCoincidenceLimit: 0.15  # Minimum time between two overlapping hit crt strips
    QPed:                 63.6  # Pedestal offset [ADC]
    QSlope:               131.9 # Pedestal slope [ADC/photon]
    UseReadoutWindow:     true  # Only reconstruct hits within readout window
}

END_PROLOG
