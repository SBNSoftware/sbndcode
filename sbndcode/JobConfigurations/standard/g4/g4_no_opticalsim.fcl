# Remove the optical simulation process from the simulate path
physics.simulate: [ rns
                  , loader
                  , largeant
                  , ionandscint
                  , simdrift
                  , mcreco
                ]

physics.producers.ionandscintout: @erase
physics.producers.pdfastsim: @erase
physics.producers.pdfastsimout: @erase